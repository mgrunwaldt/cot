var View = {};

$(document).ready(function(){
   View.bindFunctions(); 
});

View.bindFunctions = function(){
    $("#infoButton").click(function(){
        if(!Main.contactOpen){
            $("html body").animate({ scrollTop: 0 }, 200, function(){
                if(Main.isMobile){
                    Mobile.toggleContact();
                }else{
                    Main.toggleContact(); 
                }
                
            });
        }else{
            $("html body").animate({ scrollTop: 0 }, 200, function(){
                $("#contactDiv").effect("bounce", {times:3}, "fast");
            });
            
        }
    });
    
    $("#ranchSelect").on({
        'change':function(){
            View.ranchSelected();
        }
    });
};

View.ranchSelected = function(){
    var id = $("#ranchSelect").val();
    if(id != 0){
        window.location.href = '/Ranches/view/'+id;
    }
};