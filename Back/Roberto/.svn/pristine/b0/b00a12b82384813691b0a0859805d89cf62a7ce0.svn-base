<?php

/**
 * This is the model class for table "ranches".
 *
 * The followings are the available columns in table 'ranches':
 * @property integer $id
 * @property string $name
 * @property string $description
 * @property string $lat
 * @property string $long
 * @property datetime $created_on
 * @property datetime $updated_on
 * @property boolean $deleted
 */
 
class Ranches extends CActiveRecord{
    
        public $ranchFile;
        
        
        public static function getModelName($type){
            switch($type){
                case 'plural': return 'Chacras';
                case 'singular': return 'Chacra';
                case 'pluralCamelCase': return 'chacras';
                case 'singularCamelCase': return 'chacra';
                default: return '';
            }
        }
        
	/**
	 * Returns the static model of the specified AR class.
	 * @return Ranches the static model class
	 */
	public static function model($className=__CLASS__){
		return parent::model($className);
	}

	/**
	 * @return string the associated database table name
	 */
	public function tableName(){
		return 'ranches';
	}

	/**
	 * @return array validation rules for model attributes.
	 */
	public function rules(){
		// NOTE: you should only define rules for those attributes that
		// will receive user inputs.
		return array(
			array('name, description, ranch_file_id, lat, long, position, created_on, updated_on, deleted, ', 'required'),
                        array('deleted, ', 'boolean'),
                        array('created_on, updated_on, ', 'date', 'format'=>'yyyy-MM-dd hh:mm:ss'),
                        array('name', 'length', 'max'=>128),
                        array('description', 'length', 'max'=>1024),
                        array('lat', 'length', 'max'=>64),
                        array('long', 'length', 'max'=>64),
                        array('id, name, description, ranch_file_id, lat, long, position, created_on, updated_on, deleted, ', 'safe', 'on'=>'search'),
                        
		);
	}

	/**
	 * @return array relational rules.
	 */
	public function relations(){
		// NOTE: you may need to adjust the relation name and the related
		// class name for the relations automatically generated below.
		return array(
		);
	}

	/**
	 * @return array customized attribute labels (name=>label)
	 */
	public function attributeLabels(){
		return array(
			'id' => 'ID',
                        'name' => 'Nombre',
                        'description' => 'Descripción',
                        'ranch_file_id' => 'Archivo',
                        'lat' => 'Latitud',
                        'long' => 'Longitud',
                        'position' => 'Posición',
                        'created_on' => 'Fecha de creación',
                        'updated_on' => 'Fecha de actualización',
                        'deleted' => 'Eliminado',
                        
		);
	}
        
        
	public static function getAttributeName($name){
            switch($name){
                case 'id': return 'ID';
                        case 'name': return 'Nombre';
                        case 'description': return 'Descripción';
                        case 'ranch_file_id': return 'Archivo';
                        case 'lat': return 'Latitud';
                        case 'long': return 'Longitud';
                        case 'position': return 'Posición';
                        case 'created_on': return 'Fecha de creación';
                        case 'updated_on': return 'Fecha de actualización';
                        case 'deleted': return 'Eliminado';
                        
                default: return '';
            }
	}

	/**
	 * Retrieves a list of models based on the current search/filter conditions.
	 * @return CActiveDataProvider the data provider that can return the models based on the search/filter conditions.
	 */
	public function search(){
		// Warning: Please modify the following code to remove attributes that
		// should not be searched.

		$criteria=new CDbCriteria;

		$criteria->compare('name',$this->name,true);
                $criteria->compare('description',$this->description,true);
                $criteria->compare('ranch_file_id',$this->ranch_file_id);
                $criteria->compare('lat',$this->lat,true);
                $criteria->compare('long',$this->long,true);
                $criteria->compare('position',$this->position);
                $criteria->compare('created_on',$this->created_on);
                $criteria->compare('updated_on',$this->updated_on);
                $criteria->compare('deleted',$this->deleted);
                

		return new CActiveDataProvider(get_class($this), array(
			'criteria'=>$criteria,
		));
	}
        
        public static function get($id){
            $ranch = self::model()->findByPk($id);
            if(isset($ranch->id))
                return $ranch;
            else
                return false;
        }
        
        public static function getAll(){
            return self::model()->findAll('id>0 AND deleted=0 ORDER BY position ASC');
        }
        
        public static function create($name, $description, $ranch_file_id, $lat, $long){
            $ranch = new Ranches;
            $ranch->name = $name;
            $ranch->description = $description;
            $ranch->ranch_file_id = $ranch_file_id;
            $ranch->lat = $lat;
            $ranch->long = $long;
            $ranch->position = 0;
            $ranch->created_on = HelperFunctions::getDate();
            $ranch->updated_on = HelperFunctions::getDate();
            $ranch->deleted = 0;
            if($ranch->save())
                return $ranch;
            else{
                Errors::log('Error en Models/Ranches/create','Error creating ranch',print_r($ranch->getErrors(),true));
                return $ranch;
            }
        }
            
        public function updateAttributes($name, $description, $ranch_file_id, $lat, $long){
            $this->name = $name;
            $this->description = $description;
            $this->ranch_file_id = $ranch_file_id;
            $this->lat = $lat;
            $this->long = $long;
            $this->updated_on = HelperFunctions::getDate();
            if($this->save())
                return true;
            else{
                Errors::log('Error en Models/Ranches/updateRanch','Error updating ranch id:$this->id', print_r($this->getErrors(),true));
                return false;
            }
        }
            
        
            
        
            
        public static function savePositions($ranchIds){
            $counter = 0;
            foreach($ranchIds as $ranchId){
                $ranch = self::get($ranchId);
                if($ranch!=false){
                    $ranch->position = $counter;
                    $ranch->save();
                    $counter++;
                }
            }
        }
        
        
            
        public function deleteRanch(){
            $this->deleted = 1;
            $this->updated_on = HelperFunctions::getDate();
            $this->position = 0;
            if($this->save())
                return true;
            else{
                Errors::log('Error en Models/Ranches/deleteRanch','Error deleting ranch id:$this->id', print_r($this->getErrors(),true));
                return false;
            }
        }
            
        
            
        
    public function loadRanchFile(){
            $this->ranchFile = Files::get($this->ranch_file_id);
        }
}
